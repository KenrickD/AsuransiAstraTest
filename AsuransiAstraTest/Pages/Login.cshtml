@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AsuransiAstraTest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #1a1a1a;
            color: #ffffff;
            font-family: Arial, sans-serif;
        }
        .login-container {
            max-width: 400px;
            margin: 100px auto;
            padding: 30px;
            border: 2px solid #ffffff;
            border-radius: 10px;
            background-color: #2a2a2a;
        }
        .form-label {
            color: #ffffff;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .form-control {
            background-color: transparent;
            border: 2px solid #ffffff;
            color: #ffffff;
            padding: 10px;
        }
        .form-control:focus {
            background-color: transparent;
            border-color: #ffffff;
            color: #ffffff;
            box-shadow: 0 0 0 0.2rem rgba(255, 255, 255, 0.25);
        }
        .btn-login {
            background-color: transparent;
            border: 2px solid #ffffff;
            color: #ffffff;
            padding: 10px 30px;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .btn-login:hover {
            background-color: #ffffff;
            color: #1a1a1a;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <form method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username" asp-for="Username" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" asp-for="Password" required>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-login">Login</button>
            </div>
        </form>
        <div class="mt-3 text-center text-muted">
            <small>Use dummy user and password, clicking login go to dummy page</small>
        </div>
    </div>
</body>
</html>